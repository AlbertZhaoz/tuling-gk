<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ScottPlot">

    <Style TargetType="{x:Type local:WpfPlot}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WpfPlot}">
                    <Grid>
                        <TextBlock x:Name="PART_ErrorLabel" 
                                   Padding="5"
                                   FontFamily="consolas"
                                   Background="Maroon"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   Text="error message" />
                        <Image x:Name="PART_PlotImage" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>