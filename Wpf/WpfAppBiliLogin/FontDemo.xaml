<Window x:Class="WpfAppBiliLogin.FontDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppBiliLogin"
        mc:Ignorable="d"
        Title="FontDemo" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="This is Yunmobei font." FontSize="20"
                   FontFamily="{StaticResource Yunmobei}"/>
        
        <TextBlock x:Name="textzh" Text="字魂剑气体" FontSize="40"
                   FontFamily="{DynamicResource Yunmobei}"/>
        <Button Content="ChangeFont" Click="Button_Click"/>
    </StackPanel>
</Window>
