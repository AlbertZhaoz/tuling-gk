<Window x:Class="WpfAppForType.SubForm.Suggestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfAppForType.SubForm"
        mc:Ignorable="d"
        Title="Suggestion" Height="260" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label  Margin="5" Content="Suggestion Description" FontSize="16" HorizontalAlignment="Center" />
        <TextBlock Margin="5" Text="Please give some feedback on the Tuling's course.You are welcome to submit you feedback."
                   TextWrapping="WrapWithOverflow"/>
        <TextBox Margin="5" Height="120"/>
        <Button Margin="5" Content="Submit" Background="Bisque" Foreground="Brown"/>
    </StackPanel>
</Window>
