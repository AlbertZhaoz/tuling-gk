<Window x:Class="WpfAppForType.SubForm.Evaluation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:WpfAppForType.SubForm"
        mc:Ignorable="d"
        Title="Suggestion" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label  Margin="5" Content="Evaluation" FontSize="16" HorizontalAlignment="Center" />
        <TextBlock Margin="8" Text="Please rate the Tuling's courese.You are welcome to submit you feedback."
                   TextWrapping="WrapWithOverflow"/>
        <StackPanel Orientation="Horizontal">
            <hc:Rate Margin="5" Value="4.9" AllowHalf="True" ShowText="True"  
                     Foreground="{DynamicResource DangerBrush}" 
                     Icon="{StaticResource SuccessGeometry}"/>
            <Button Margin="5" Content="Submit" Background="Bisque" Foreground="Brown"/>
        </StackPanel>
        
    </StackPanel>
</Window>
