<Window x:Class="MQTTDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MQTTDemo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <StackPanel TextElement.FontSize="20">
        <TextBox x:Name="TbTopic"
                 Margin="5"
                 Text="testtopic/a" />
        <TextBox x:Name="TbMessage" Margin="5" />
        <Button Margin="5"
                Click="Button_Click"
                Content="Send" />
        <Button Margin="5"
                Click="Button_Click_1"
                Content="Subscribe" />
        <TextBlock Name="TbShowMessage"
                   Height="200"
                   Margin="5" />
    </StackPanel>
</Window>
